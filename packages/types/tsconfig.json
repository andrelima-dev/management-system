{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "stripInternal": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
