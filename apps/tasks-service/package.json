{
  "name": "@jungle/tasks-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "nest start",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typeorm": "typeorm",
    "migration:run": "ts-node -r tsconfig-paths/register --transpile-only --project tsconfig.json ./node_modules/typeorm/cli.js migration:run -d src/database/data-source.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register --transpile-only --project tsconfig.json ./node_modules/typeorm/cli.js migration:revert -d src/database/data-source.ts",
    "migration:generate": "ts-node -r tsconfig-paths/register --transpile-only --project tsconfig.json ./node_modules/typeorm/cli.js migration:generate -d src/database/data-source.ts",
    "migration:create": "ts-node -r tsconfig-paths/register --transpile-only --project tsconfig.json ./node_modules/typeorm/cli.js migration:create -d src/database/data-source.ts"
  },
  "dependencies": {
    "@jungle/types": "workspace:*",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.2",
    "@nestjs/microservices": "^10.3.2",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/typeorm": "^10.0.0",
    "amqp-connection-manager": "^4.1.5",
    "amqplib": "^0.10.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.3",
    "joi": "^17.12.3",
    "pg": "^8.12.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@jungle/tsconfig": "workspace:*",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/testing": "^10.3.2",
    "@types/amqplib": "^0.10.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm-ts-node-commonjs": "^0.3.20"
  }
}
